{% extends 'fronttemplate/basefront.html.twig' %}

{% block title %}Outils
{% endblock %}
{% block body %}
<style>
		.wrapper{
			width:1100px;
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			grid-auto-rows: auto;
			grid-gap: 20px;	
			
		}
		p{
				font-size:14px;
			}
		
	</style>
	<div class="wrapper">

		{% for outil in outils %}
		
			<div class="card" style="width: 20rem;">
            <div class="position-relative">
									<img class="card-img-top" style="height: 230px; width:320px;" src="{{asset('uploads/') ~ outil.image}}" alt="Card image cap">
									
								</div>
				
				 <div class="card-body">
				 <h4 class="card-title">{{ outil.quantite }}</h4>
				<p class="description">{{ outil.labelOut }} </p>
				


				
				
    
				</div>
                <a class="stretched-link" href="{{ path('app_reservation_new') }}"></a>
			</div>

		{% else %}
				<div colspan="4">no records found</div>
		{% endfor %}

	</div>

	

</div>

	</div>



{% endblock %}